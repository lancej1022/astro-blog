---
import Layout from "~/layouts/Layout.astro";
import Tag from "~/components/Tag.astro";
import PostTimeAndReadingTime from "~/components/Datetime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "~/utils/slugify";

export interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, author, description, ogImage, pubDatetime, tags } = post.data;

const { Content } = await post.render();

const ogUrl = new URL(ogImage ? ogImage : `${title}.png`, Astro.url.origin).href;
---

<Layout title={title ?? ""} author={author ?? ""} description={description} ogImage={ogUrl}>
  <!-- constrain width using the same `min` constrain width here -->
  <div class="custom-width mx-auto flex w-full justify-start px-2">
    <button class="focus-outline mb-2 mt-8 flex hover:opacity-75" onclick="
    history.back()
    ">
      <svg xmlns="http://www.w3.org/2000/svg"
        ><path d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"></path>
      </svg><span>Go back</span>
    </button>
  </div>

  <!-- DONT constrain the width here -->
  <main id="main-content">
    <!-- Add a `custom-width` component (review if this is correct or whether to just use a div) and control the width on it -->
    <div class="custom-width mx-auto">
      <h1 class="post-title">{title}</h1>
      <PostTimeAndReadingTime
        postBody={post.body}
        datetime={pubDatetime}
        size="lg"
        className="my-2"
      />
    </div>

    <article id="article" role="article" class="holy-grail prose mx-auto mt-8">
      <!-- <article id="article" role="article" class="prose mx-auto mt-8 max-w-3xl"> -->
      <Content />
    </article>

    <ul class="tags-container">
      {tags.map((tag) => <Tag name={slugifyStr(tag)} />)}
    </ul>
  </main>
</Layout>

<style>
  /* .prose {
    max-width: unset;
  } */

  .custom-width {
    max-width: min(65ch, calc(100% - 64px));
  }
  main {
    @apply pb-12;
  }
  /* main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  } */
  .post-title {
    @apply text-2xl font-semibold text-skin-accent;
  }
  .tags-container {
    @apply my-8;
  }
</style>
